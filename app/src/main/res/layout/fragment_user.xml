<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#13155A"
    tools:context=".user">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80CBC4">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="412dp"
            android:layout_height="551dp"
            android:background="@drawable/background_mypage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText8"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/icon_profil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="이름"
            android:textColor="#FF000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_mp_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.223" />

        <ImageView
            android:id="@+id/rec_memo"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:background="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toStartOf="@+id/rec_usersub"
            app:layout_constraintHorizontal_bias="0.215"

            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5" />

        <ImageView
            android:id="@+id/rec_usersub"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:background="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.508" />

        <ImageView
            android:id="@+id/rec_setting"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:background="@drawable/rectangle"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.832"
            app:layout_constraintStart_toEndOf="@+id/rec_usersub"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.508" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 관리"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/rec_setting"
            app:layout_constraintEnd_toEndOf="@+id/rec_setting"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="@+id/rec_setting"
            app:layout_constraintTop_toBottomOf="@+id/setting"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/memo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/icon_memo"
            app:layout_constraintBottom_toBottomOf="@+id/rec_memo"
            app:layout_constraintEnd_toEndOf="@+id/rec_memo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/rec_memo"
            app:layout_constraintTop_toTopOf="@+id/rec_memo"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 메모"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/rec_memo"
            app:layout_constraintEnd_toEndOf="@+id/rec_memo"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="@+id/rec_memo"
            app:layout_constraintTop_toTopOf="@+id/rec_memo"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장한 일정"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/rec_usersub"
            app:layout_constraintEnd_toEndOf="@+id/rec_usersub"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/rec_usersub"
            app:layout_constraintTop_toTopOf="@+id/rec_usersub"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/icon_setting"
            app:layout_constraintBottom_toBottomOf="@+id/rec_setting"
            app:layout_constraintEnd_toEndOf="@+id/rec_setting"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/rec_setting"
            app:layout_constraintTop_toTopOf="@+id/rec_setting"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/usersub"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/icon_calendar"
            app:layout_constraintBottom_toBottomOf="@+id/rec_usersub"
            app:layout_constraintEnd_toEndOf="@+id/rec_usersub"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/rec_usersub"
            app:layout_constraintTop_toTopOf="@+id/rec_usersub"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="메뉴"
            android:textColor="@color/black"

            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/underscore"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listview_memo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#D3D3D3"
            android:gravity="center"
            android:text="나의 메모"
            android:textAlignment="center"
            android:textColor="#050505"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.659"
            tools:layout_editor_absoluteX="1dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listview_usersub"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#D8D8D8"
            android:gravity="center"
            android:text="저장한 일정"
            android:textAlignment="center"
            android:textColor="#050505"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.651"
            tools:layout_editor_absoluteX="1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</FrameLayout>

